<%- include("../partials/header") %>

<div class="ui container main text segment">
  <div class="ui huge header">Edit <%=cars.model%></div>
  <form class="ui form" action="/cars/<%=cars._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Make</label
      ><input type="text" name="car[make]" value="<%=cars.make%>" />
    </div>
    <div class="field">
      <label>Model</label
      ><input type="text" name="car[model]" value="<%=cars.model%>" />
    </div>
    <div class="field">
      <label>Price</label
      ><input type="text" name="car[price]" value="<%=cars.price%>" />
    </div>
    <div class="field">
      <label>Year</label
      ><input type="text" name="car[year]" value="<%=cars.year%>" />
    </div>
    <div class="field">
      <label>Type</label
      ><input type="text" name="car[type]" value="<%=cars.type%>" />
    </div>
    <div class="field">
      <label>Mileage</label
      ><input type="text" name="car[mileage]" value="<%=cars.mileage%>" />
    </div>
    <div class="field">
      <label>ZIP Code</label
      ><input type="text" name="car[zip]" value="<%=cars.zip%>" />
    </div>
    <div class="field">
      <label>Photo</label
      ><input type="text" name="car[image]" value="<%=cars.image%>" />
    </div>
    <div class="field">
      <label>Description</label
      ><textarea name="car[description]"><%=cars.description%></textarea>
    </div>

    <button class="ui basic button red" type="submit">Submit</button>
  </form>
</div>

<%- include("../partials/footer") %>
